# Functions
# Create a PR from master to production and assign a reviewer
function shipit() {
    gh pr create --base production --head master --title "chore: deployment ðŸš€" --reviewer $1
}

# Warning message to remember to chunk commits appropriately & boot if on master/main
git() {
    if [[ $1 == "add" && $2 == "-p" ]]; then
        local current_branch=$(command git rev-parse --abbrev-ref HEAD)

        if [[ "$current_branch" == "master" || "$current_branch" == "main" ]]; then
            echo -e "\033[1;31mðŸš¨ You are on the '$current_branch' branch. Direct commits are discouraged. Please switch to a different branch!\033[0m"
            return 1
        else
            echo -e "\033[1;31mðŸš¨ Ensure your commit represents only one logical change. Atomic commits make history clearer!\033[0m"
        fi
        # Disallow 'git add .' by checking the command arguments
    elif [[ $1 == "add" && $2 == "." ]]; then
        echo -e "\033[1;31mðŸš¨ Nah, you can't do that. Use git patch instead.\033[0m"
        return 1
    fi
    command git "$@"
}

